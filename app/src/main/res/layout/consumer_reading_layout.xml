<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lbl_document_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#0D0D0D"
                    android:textSize="16sp"
                    android:text="№7400003801 ">
                </TextView>

                <TextView
                    android:id="@+id/lbl_consumer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#0D0D0D"
                    android:textSize="13sp"
                    android:text="Гатальская Екатерина Николаевна">
                </TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_sync_type"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/sync_data_state"
                android:contentDescription="@string/app_name">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#F6F7F9"
            android:orientation="horizontal">

            <EditText
                android:layout_height="@dimen/input_height"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:focusable="false"
                android:background="@drawable/label_input_background"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/reading_text_size"
                android:text="@string/prev_block_name"
                android:importantForAutofill="no" />

            <EditText
                android:layout_height="@dimen/input_height"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_marginEnd="6dp"
                android:textAlignment="center"
                android:focusable="false"
                android:background="@drawable/label_input_background"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/reading_text_size"
                android:text="@string/current_block_name"
                android:importantForAutofill="no" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="#F6F7F9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/reading_dt_name"
                android:textColor="#212126"
                android:textSize="@dimen/zone_lbl_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/prev_dt"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="datetime"
                    android:enabled="false"
                    android:textColor="#787888"
                    android:textSize="@dimen/reading_text_size"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/current_dt"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="6dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="datetime"
                    android:enabled="false"
                    android:focusable="false"
                    android:textColor="@color/current_reading_color"
                    android:textSize="@dimen/reading_text_size"
                    android:importantForAutofill="no" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="#F6F7F9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/zone1_name"
                android:textColor="#212126"
                android:textSize="@dimen/zone_lbl_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/prev_zone1_value"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="datetime"
                    android:enabled="false"
                    android:textColor="#787888"
                    android:textSize="@dimen/reading_text_size"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/current_zone1_value"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="38"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="4dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="numberDecimal"
                    android:enabled="true"
                    android:focusable="true"
                    android:textColor="@color/current_reading_color"
                    android:textSize="@dimen/reading_text_size"
                    android:importantForAutofill="no" />

              <ImageButton
                  android:id="@+id/btn_photo_1"
                  android:layout_height="40dp"
                  android:layout_width="0dp"
                  android:layout_weight="12"
                  android:layout_gravity="center"
                  android:layout_marginEnd="6dp"
                  android:background="#F6F7F9"
                  android:contentDescription="Фото зоны 1"
                  android:src="@drawable/no_photo"
                  android:onClick="zone1PhotoClick">
              </ImageButton>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/zone2_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="#F6F7F9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/zone2_name"
                android:textColor="#212126"
                android:textSize="@dimen/zone_lbl_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/prev_zone2_value"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="datetime"
                    android:enabled="false"
                    android:textColor="#787888"
                    android:textSize="@dimen/reading_text_size" />

                <EditText
                    android:id="@+id/current_zone2_value"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="38"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="4dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="numberDecimal"
                    android:enabled="true"
                    android:textColor="@color/current_reading_color"
                    android:textSize="@dimen/reading_text_size"
                    android:importantForAutofill="no" />

                <ImageButton
                    android:id="@+id/btn_photo_2"
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:layout_gravity="center"
                    android:layout_marginEnd="6dp"
                    android:background="#F6F7F9"
                    android:contentDescription="Фото зоны 2"
                    android:src="@drawable/done_photo"
                    android:onClick="zone2PhotoClick">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/zone3_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="#F6F7F9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/zone3_name"
                android:textColor="#212126"
                android:textSize="@dimen/zone_lbl_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/prev_zone3_value"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="datetime"
                    android:enabled="false"
                    android:textColor="#787888"
                    android:textSize="@dimen/reading_text_size" />

                <EditText
                    android:id="@+id/current_zone3_value"
                    android:layout_height="@dimen/input_height"
                    android:layout_width="0dp"
                    android:layout_weight="38"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="4dp"
                    android:textAlignment="center"
                    android:background="@drawable/input_selector"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="numberDecimal"
                    android:enabled="true"
                    android:textColor="@color/current_reading_color"
                    android:textSize="@dimen/reading_text_size"
                    android:importantForAutofill="no" />

                <ImageButton
                    android:id="@+id/btn_photo_3"
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:layout_gravity="center"
                    android:layout_marginEnd="6dp"
                    android:background="#F6F7F9"
                    android:contentDescription="Фото зоны 3"
                    android:src="@drawable/no_photo"
                    android:onClick="zone3PhotoClick">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/comment_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="#F6F7F9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/comment_name"
                android:textColor="#212126"
                android:textSize="@dimen/zone_lbl_size" />

            <EditText
                android:id="@+id/comment_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:padding="10dp"
                android:background="@drawable/input_selector"
                android:fontFamily="@font/roboto_regular"
                android:inputType="textMultiLine"
                android:enabled="true"
                android:maxLength="150"
                android:maxLines="5"
                android:hint="@string/comment_input_hint"
                android:textColor="@color/comment_text_color"
                android:textSize="@dimen/comment_text_size"
                android:importantForAutofill="no" />


        </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

